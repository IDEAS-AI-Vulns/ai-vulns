# ===============================================================================
# OpenAI API Configuration (REQUIRED)
# ===============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=o3-mini
OPENAI_WEB_SEARCH_MODEL=gpt-4o-search-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_ORG_ID=

# ===============================================================================
# NVD API Configuration (Optional but Recommended)  
# ===============================================================================
# Get your API key from: https://nvd.nist.gov/developers/request-an-api-key
# Benefits: Higher rate limits (50 requests/30s vs 5 requests/10s) and enhanced CVE data
NVD_API_KEY=your_nvd_api_key_here

# ===============================================================================
# OpenAI Timeout & Rate Limiting Configuration
# ===============================================================================
OPENAI_TIMEOUT_SECONDS=300.0
OPENAI_MAX_RETRIES=3
MAX_CONCURRENT_API_CALLS=2
API_CALL_DELAY_SECONDS=2.0

# ===============================================================================
# Analysis Parameters
# ===============================================================================
DEFAULT_TOP_K=50
MAX_CHUNKS_FOR_ANALYSIS=20

# ===============================================================================
# File Processing Configuration
# ===============================================================================
# Options: "python" (only Python files), "all" (all supported languages), "custom" (custom extensions)
FILE_FILTER_MODE=all

# Custom file extensions (used when FILE_FILTER_MODE=custom)
# Comma-separated list, e.g., ".py,.js,.ts,.java"
CUSTOM_EXTENSIONS=

# File size limits
MAX_FILE_SIZE_MB=0.5         # Skip files larger than 0.5MB
MAX_FILE_LINES=1000          # Skip files with more than 1000 lines
WARN_FILE_SIZE_MB=0.2        # Warn about files larger than 0.2MB
WARN_FILE_LINES=800          # Warn about files with more than 800 lines
MAX_FILES_FOR_TESTING=0      # Limit files for testing (0=no limit)

# ===============================================================================
# Resource Optimization
# ===============================================================================
EMBEDDING_BATCH_SIZE=10      # Process embeddings in batches
MAX_CHUNK_SIZE_MB=10.0       # Max size per chunk in MB
MAX_TOTAL_CHUNKS=50000       # Max chunks to process (0=no limit)
MEMORY_LIMIT_GB=16.0         # Soft memory limit in GB

# ===============================================================================
# LLM Input Size Limits
# ===============================================================================
MAX_PREPROCESSING_CHARS=200000    # ~50k tokens max for preprocessing
MAX_ORGANIZATION_CHARS=50000      # ~12k tokens max for organization

# ===============================================================================
# Chunking Configuration
# ===============================================================================
ENABLE_CHUNK_SUBDIVISION=false   # Enable chunk subdivision
MAX_CHUNKS_PER_FILE=15           # Max chunks per file (0=no limit)
CHUNKING_PARALLEL_WORKERS=4      # Parallel file processing workers
REDUCE_CHUNKING_LOGS=true        # Reduce verbose chunking logs